{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "i18n:check": "node scripts/i18n-check.cjs",
    "i18n:check:strict": "node scripts/i18n-check.cjs --strict",
    "i18n:hardcoded": "node scripts/i18n-hardcoded-check.cjs",
    "i18n:hardcoded:strict": "node scripts/i18n-hardcoded-check.cjs --fail-on-found",
    "i18n:rtl": "node scripts/i18n-rtl-check.cjs",
    "i18n:rtl:strict": "node scripts/i18n-rtl-check.cjs --fail-on-found",
    "i18n:verify": "npm run i18n:check && npm run i18n:hardcoded && npm run i18n:rtl",
    "i18n:verify:strict": "npm run i18n:check:strict && npm run i18n:hardcoded:strict && npm run i18n:rtl:strict",
    "test:e2e": "npm run test:e2e:fast",
    "test:e2e:fast": "playwright test e2e/smoke.spec.ts && playwright test e2e/i18n-rtl-visual.spec.ts --grep \"@fast\"",
    "test:e2e:full": "playwright test e2e/smoke.spec.ts && playwright test e2e/i18n-rtl-visual.spec.ts --grep \"@full\"",
    "test:e2e:admin-states": "playwright test e2e/admin-state-visual.spec.ts",
    "test:e2e:customer-states": "playwright test e2e/customer-state-visual.spec.ts",
    "test:e2e:visual:fast:update": "playwright test e2e/i18n-rtl-visual.spec.ts --grep \"@fast\" --update-snapshots",
    "test:e2e:visual:full:update": "playwright test e2e/i18n-rtl-visual.spec.ts --grep \"@full\" --update-snapshots",
    "test:e2e:admin-states:update": "playwright test e2e/admin-state-visual.spec.ts --update-snapshots",
    "test:e2e:customer-states:update": "playwright test e2e/customer-state-visual.spec.ts --update-snapshots",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@types/react-grid-layout": "^1.3.6",
    "axios": "^1.13.5",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.34.2",
    "jsqr": "^1.4.0",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "qrcode.react": "^4.2.0",
    "react": "19.2.3",
    "react-day-picker": "^9.13.2",
    "react-dom": "19.2.3",
    "react-easy-crop": "^5.5.6",
    "react-grid-layout": "^2.2.2",
    "recharts": "^3.7.0",
    "swr": "^2.4.0",
    "tailwind-merge": "^3.4.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
